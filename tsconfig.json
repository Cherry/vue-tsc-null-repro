{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"useDefineForClassFields": true,
		"lib": [
			"ESNext",
			"DOM",
			"DOM.Iterable"
		],
		"jsx": "preserve",
		"noImplicitThis": true,
		"strict": true,
		"isolatedModules": true,
		"verbatimModuleSyntax": true,
		"strictNullChecks": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"allowJs": true,
		"types": []
	},
	"include": [
		"src"
	]
}
